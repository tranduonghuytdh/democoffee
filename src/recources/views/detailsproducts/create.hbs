<div class="formabc">
    <h3>Thêm Sản Phẩm</h3>
    <form method="POST" action="/products/store">
        <div class="form-group">
            <label for="image">Image</label>
            <input type="text" class="form-control" id="image" name="image" style=" width: 1000px">
        </div>

        <div class="form-group">
            <label for="name">Tên Sản Phẩm</label>
            <input type="text" class="form-control" id="name" name="name" style=" width: 1000px">
        </div>

        <div class="form-group">
            <label for="price">Giá</label>
            <input type="text" class="form-control" id="price" name="price" style=" width: 1000px">
        </div>

        <button type="submit" class="btn btn-primary">Thêm Sản Phẩm</button>
    </form>
</div>